<div id="edit-container">
<h2>Edit a book</h2>
<div>
<form action="/books/{{_id}}/edit" method="POST">
  <label> Title: 
    <input type="text" name="title" value="{{title}}" />
  </label>

  <label> Author: <br/>
  <select name="author">
    {{#each author}}
    <option value="{{_id}}">{{title}}</option>
    {{/each}}
    </select>

  <label> Description: 
    <textarea name="description" cols="30" rows="4">{{description}}</textarea>
  </label>

  <label> Rate: 
    <input type="number" name="rating" min="1" max="10" value="{{rating}}" />
  </label>

  <button type="submit"> Edit </button>
</form>
</div>
<a href="/books">Back</a>

</div>

